+import org.vmmagic.unboxed.Word;
+
+/**
+ * This class implements the collector context for a simple reference counting
+ * collector.
+ */
+@Uninterruptible
+public class RCImmixConsCollector extends StopTheWorldCollector {
+
+  /************************************************************************
+   * Initialization
+   */
+  protected final AddressDeque newRootPointerBuffer;
+  protected final AddressDeque newRootPointerBackBuffer;
+  protected final AddressDeque unfilteredStackRootBuffer;
+  public TraceLocal backupTrace;
+  private final RCImmixConsBTTraceLocal backTrace;
+  private final RCImmixConsBTDefragTraceLocal defragTrace;
+  private final ObjectReferenceDeque modBuffer;
+  private final ObjectReferenceDeque pinBuffer;
+  private final ObjectReferenceDeque oldRootBuffer;
+  private final RCImmixConsDecBuffer decBuffer;
+  public final RCImmixConsZero zero;
+  protected RCImmixCollectorLocal rc;
+  protected final RCImmixAllocator copy;
+  protected final RCImmixAllocator young;
+  protected final AddressDeque newBlockBuffer;
+  protected final AddressDeque newLineBuffer;
+  private final RCImmixConsRootSetTraceLocal rootTrace;
+  private final RCImmixConsRootSetTraceLocal stackTrace;
+  private final RCImmixConsModifiedProcessor modProcessor;
+
+  /**
+   * Constructor.
+   */
+  public RCImmixConsCollector() {
+    newRootPointerBuffer = new AddressDeque("new-root", global().newRootPool);
+    newRootPointerBackBuffer = new AddressDeque("new-root-back", global().newRootBackPool);
+    unfilteredStackRootBuffer = new AddressDeque("unfiltered-stack-root", global().unfilteredStackRootPool);
+    oldRootBuffer = new ObjectReferenceDeque("old-root", global().oldRootPool);
+    decBuffer = new RCImmixConsDecBuffer(global().decPool);
+    modBuffer = new ObjectReferenceDeque("mod buf", global().modPool);
+    pinBuffer = new ObjectReferenceDeque("pin buf", global().pinPool);
+    backTrace = new RCImmixConsBTTraceLocal(global().backupTrace);
+    defragTrace = new RCImmixConsBTDefragTraceLocal(global().backupTrace);
+    zero = new RCImmixConsZero();
+    rc = new RCImmixCollectorLocal(RCImmixCons.rcSpace);
+    copy = new RCImmixAllocator(RCImmixCons.rcSpace, true, true);
+    young = new RCImmixAllocator(RCImmixCons.rcSpace, true, false);
+    newBlockBuffer = new AddressDeque("new-block", global().newBlockPool);
+    newLineBuffer = new AddressDeque("new-line", global().newLinePool);
+    rootTrace = new RCImmixConsRootSetTraceLocal(global().rootTrace, newRootPointerBuffer);
+    stackTrace = new RCImmixConsRootSetTraceLocal(global().stackTrace, unfilteredStackRootBuffer);
+    modProcessor = new RCImmixConsModifiedProcessor(this);
+  }
+
+  /**
+   * Get the modified processor to use.
+   */
+  protected TransitiveClosure getModifiedProcessor() {
+    return modProcessor;
+  }
+
+  /**
+   * Get the root trace to use.
+   */
+  protected TraceLocal getRootTrace() {
+    return rootTrace;
+  }
+
+  protected TraceLocal getStackTrace() {
+    return stackTrace;
+  }
+
+  /****************************************************************************
+   *
+   * Collection
+   */
+
+  /**
+   * {@inheritDoc}
+   */
+  @Override
+  public void collect() {
+    Phase.beginNewPhaseStack(Phase.scheduleComplex(global().collection));
+  }
+
+  @Override
+  public void collectionPhase(short phaseId, boolean primary) {
+    if (phaseId == RCImmixCons.PREPARE) {
+      rc.prepare(true);
+      getRootTrace().prepare();
+      getStackTrace().prepare();
+      if (RCImmixCons.CC_BACKUP_TRACE && RCImmixCons.performCycleCollection) {
+        backupTrace = RCImmixCons.rcSpace.inImmixDefragCollection() ? defragTrace : backTrace;
+        backupTrace.prepare();
+        copy.reset();
+      } else {
+        young.reset();
+      }
+      return;
+    }
+
+    if (phaseId == RCImmixCons.PROCESS_NEWBLOCKBUFFER) {
+      if (!RCImmixCons.performCycleCollection) {
+        Address address;
+        while(!newBlockBuffer.isEmpty()) {
+          address = newBlockBuffer.pop();
+          RCImmixChunk.clearBlockMetaData(address);
+        }
+        while(!newLineBuffer.isEmpty()) {
+          address = newLineBuffer.pop();
+          RCImmixBlock.sweepBlockToClearLineMap(address);
+        }
+      }
+      return;
+    }
+
+    if (phaseId == RCImmixCons.STACK_ROOTS) {
+      VM.scanning.computeThreadRoots(getStackTrace());
+      return;
+    }
+
+    if (phaseId == RCImmixCons.ROOTS) {
+      VM.scanning.computeGlobalRoots(getRootTrace());
+      VM.scanning.computeStaticRoots(getRootTrace());
+      if (Plan.SCAN_BOOT_IMAGE && RCImmixCons.performCycleCollection) {
+        VM.scanning.computeBootImageRoots(getRootTrace());
+      }
+      return;
+    }
+
+    if (phaseId == RCImmixCons.CLOSURE) {
+      getRootTrace().completeTrace();
+      getStackTrace().completeTrace();
+      newRootPointerBuffer.flushLocal();
+      unfilteredStackRootBuffer.flushLocal();
+      return;
+    }
+
+    if (phaseId == RCImmixCons.PROCESS_OLDROOTBUFFER) {
+      ObjectReference current;
+      while(!(current = oldRootBuffer.pop()).isNull()) {
+        decBuffer.push(current);
+      }
+      return;
+    }
+
+    if (phaseId == RCImmixCons.PROCESS_NEWROOTBUFFER) {
+      ObjectReference current;
+      Address address;
+      while(!newRootPointerBuffer.isEmpty()) {
+        address = newRootPointerBuffer.pop();
+        current = address.loadObjectReference();
+        if (RCImmixCons.isRCObject(current)) {
+          if (RCImmixCons.CC_BACKUP_TRACE && RCImmixCons.performCycleCollection) {
+            if (RCImmixObjectHeader.incRC(current) == RCImmixObjectHeader.INC_NEW) {
+              modBuffer.push(current);
+            }
+            newRootPointerBackBuffer.push(address);
+          } else {
+            if (RCImmixCons.RC_SURVIVOR_COPY) {
+              survivorCopy(address, current, true);
+            } else {
+              if (RCImmixObjectHeader.incRC(current) == RCImmixObjectHeader.INC_NEW) {
+                if (Space.isInSpace(RCImmixCons.REF_COUNT, current)) {
+                  RCImmixObjectHeader.incLines(current);
+                }
+                modBuffer.push(current);
+              }
+              oldRootBuffer.push(current);
+            }
+          }
+        }
+      }
+      modBuffer.flushLocal();
+      if (RCImmixCons.CC_BACKUP_TRACE && RCImmixCons.performCycleCollection) {
+        newRootPointerBackBuffer.flushLocal();
+      } else {
+        oldRootBuffer.flushLocal();
+      }
+      return;
+    }
+
+    if (phaseId == RCImmixCons.FILTER_STACKROOTBUFFER) {
+      ObjectReference current;
+      Address address;
+      while(!unfilteredStackRootBuffer.isEmpty()) {
+        address = unfilteredStackRootBuffer.pop();
+        current = address.loadObjectReference();
+        if (isValidRef(current)) {
+          if (Space.isInSpace(RCImmixCons.REF_COUNT, current)) {
+            if (!RCImmixObjectHeader.isPinnedObject(current)) {
+              RCImmixObjectHeader.pinObject(current);
+              pinBuffer.push(current);
+            }
+          }
+          newRootPointerBuffer.push(address);
+        }
+      }
+      pinBuffer.flushLocal();
+      newRootPointerBuffer.flushLocal();
+      return;
+    }
+
+    if (phaseId == RCImmixCons.PROCESS_MODBUFFER) {
+      ObjectReference current;
+      while(!(current = modBuffer.pop()).isNull()) {
+        RCImmixObjectHeader.makeUnlogged(current);
+        if (!RCImmixCons.performCycleCollection) {
+          if (Space.isInSpace(RCImmixCons.REF_COUNT, current)) {
+            RCImmixSpace.setNewBit(current);
+          }
+        }
+        VM.scanning.scanObject(getModifiedProcessor(), current);
+      }
+      return;
+    }
+
+    if (phaseId == RCImmixCons.PROCESS_DECBUFFER) {
+      ObjectReference current;
+      if (RCImmixCons.CC_BACKUP_TRACE && RCImmixCons.performCycleCollection) {
+        while(!(current = decBuffer.pop()).isNull()) {
+          if (RCImmixObjectHeader.isNew(current)) {
+            if (Space.isInSpace(RCImmixCons.REF_COUNT_LOS, current)) {
+              RCImmixCons.rcloSpace.free(current);
+            } else if (Space.isInSpace(RCImmixCons.IMMORTAL, current)) {
+              VM.scanning.scanObject(zero, current);
+            }
+          }
+        }
+        return;
+      }
+      while(!(current = decBuffer.pop()).isNull()) {
+        if (RCImmixObjectHeader.isNew(current)) {
+          if (Space.isInSpace(RCImmixCons.REF_COUNT_LOS, current)) {
+            RCImmixCons.rcloSpace.free(current);
+          } else if (Space.isInSpace(RCImmixCons.IMMORTAL, current)) {
+            VM.scanning.scanObject(zero, current);
+          }
+        } else {
+          if (RCImmixObjectHeader.decRC(current) == RCImmixObjectHeader.DEC_KILL) {
+            decBuffer.processChildren(current);
+            if (Space.isInSpace(RCImmixCons.REF_COUNT, current)) {
+              RCImmixObjectHeader.decLines(current);
+              RCImmixSpace.clearNewBit(current);
+            } else if (Space.isInSpace(RCImmixCons.REF_COUNT_LOS, current)) {
+              RCImmixCons.rcloSpace.free(current);
+            } else if (Space.isInSpace(RCImmixCons.IMMORTAL, current)) {
+              VM.scanning.scanObject(zero, current);
+            }
+          }
+        }
+      }
+      return;
+    }
+
+    if (phaseId == RCImmixCons.BT_CLOSURE_INIT) {
+      if (RCImmixCons.CC_BACKUP_TRACE && RCImmixCons.performCycleCollection) {
+        ObjectReference current, newObject;
+        Address address;
+        while(!newRootPointerBackBuffer.isEmpty()) {
+          address = newRootPointerBackBuffer.pop();
+          current = address.loadObjectReference();
+          if (RCImmixCons.isRCObject(current)) {
+            newObject = backupTrace.traceObject(current);
+            if (VM.VERIFY_ASSERTIONS) VM.assertions._assert(!newObject.isNull());
+            address.store(newObject);
+          }
+        }
+      }
+      return;
+    }
+
+    if (phaseId == RCImmixCons.BT_CLOSURE) {
+      if (RCImmixCons.CC_BACKUP_TRACE && RCImmixCons.performCycleCollection) {
+        backupTrace.completeTrace();
+      }
+      return;
+    }
+
+    if (phaseId == RCImmixCons.CLEAR_PINBUFFER) {
+      ObjectReference current;
+      while(!(current = pinBuffer.pop()).isNull()) {
+        RCImmixObjectHeader.clearPinObject(current);
+      }
+      if (VM.VERIFY_ASSERTIONS) VM.assertions._assert(pinBuffer.isEmpty());
+      return;
+    }
+
+    if (phaseId == RCImmixCons.CLEAR_SIDEMAP) {
+      if (RCImmixCons.CC_BACKUP_TRACE && RCImmixCons.performCycleCollection) {
+        rc.clearChunkMap();
+      }
+      return;
+    }
+
+    if (phaseId == RCImmixCons.RELEASE) {
+      if (RCImmixCons.CC_BACKUP_TRACE && RCImmixCons.performCycleCollection) {
+        backupTrace.release();
+      }
+      getRootTrace().release();
+      getStackTrace().release();
+      rc.release(true);
+      if (VM.VERIFY_ASSERTIONS) {
+        VM.assertions._assert(newRootPointerBuffer.isEmpty());
+        VM.assertions._assert(unfilteredStackRootBuffer.isEmpty());
+        VM.assertions._assert(modBuffer.isEmpty());
+        VM.assertions._assert(decBuffer.isEmpty());
+      }
+      return;
+    }
+
+    super.collectionPhase(phaseId, primary);
+  }
+
+  /****************************************************************************
+   *
+   * Miscellaneous
+   */
+
+  /** @return The active global plan as an <code>RC</code> instance. */
+  @Inline
+  protected static RCImmixCons global() {
+    return (RCImmixCons) VM.activePlan.global();
+  }
+
+  @Override
+  public final TraceLocal getCurrentTrace() {
+    return getRootTrace();
+  }
+
+  /** @return The current modBuffer instance. */
+  @Inline
+  public final ObjectReferenceDeque getModBuffer() {
+    return modBuffer;
+  }
+
+   /****************************************************************************
+   *
+   * Collection-time allocation
+   */
+
+   /**
+    * {@inheritDoc}
+    */
+   @Override
+   @Inline
+   public Address allocCopy(ObjectReference original, int bytes,
+       int align, int offset, int allocator) {
+     if (VM.VERIFY_ASSERTIONS) {
+       VM.assertions._assert(bytes <= Plan.MAX_NON_LOS_COPY_BYTES);
+       VM.assertions._assert(allocator == RCImmixCons.ALLOC_DEFAULT);
+     }
+     if (RCImmixCons.performCycleCollection && RCImmixCons.rcSpace.inImmixDefragCollection()) {
+       return copy.alloc(bytes, align, offset);
+     } else return young.alloc(bytes, align, offset);
+   }
+
+   @Override
+   @Inline
+   public void postCopy(ObjectReference object, ObjectReference typeRef,
+       int bytes, int allocator) {
+     if (VM.VERIFY_ASSERTIONS) VM.assertions._assert(allocator == RCImmixCons.ALLOC_DEFAULT);
+     if (VM.VERIFY_ASSERTIONS) VM.assertions._assert(Space.isInSpace(RCImmixCons.REF_COUNT, object));
+     if (RCImmixCons.performCycleCollection && RCImmixCons.rcSpace.inImmixDefragCollection()) {
+       RCImmixCons.rcSpace.postCopy(object, bytes);
+
+       if (VM.VERIFY_ASSERTIONS) {
+         VM.assertions._assert(backupTrace.isLive(object));
+         VM.assertions._assert(backupTrace.willNotMoveInCurrentCollection(object));
+       }
+     } else {
+       RCImmixCons.rcSpace.postCopyYoungObject(object, bytes);
+     }
+   }
+
+   @Inline
+   public void survivorCopy(Address slot, ObjectReference object, boolean root) {
+     if (Space.isInSpace(RCImmixCons.REF_COUNT, object)) {
+       // Race to be the (potential) forwarder
+       Word priorStatusWord = ForwardingWord.attemptToForward(object);
+       if (ForwardingWord.stateIsForwardedOrBeingForwarded(priorStatusWord)) {
+         // We lost the race; the object is either forwarded or being forwarded by another thread.
+         ObjectReference rtn = ForwardingWord.spinAndGetForwardedObject(object, priorStatusWord);
+         RCImmixObjectHeader.incRCOld(rtn);
+         slot.store(rtn);
+         if (root) oldRootBuffer.push(rtn);
+       } else {
+         byte priorState = (byte) (priorStatusWord.toInt() & 0xFF);
+         // the object is unforwarded, either because this is the first thread to reach it, or because the object can't be forwarded
+         if (!RCImmixObjectHeader.isHeaderNew(priorStatusWord)) {
+           // the object has not been forwarded, but has the correct new state; unlock and return unmoved object
+           RCImmixObjectHeader.returnToPriorState(object, priorState); // return to uncontested state
+           RCImmixObjectHeader.incRCOldNoSync(object);
+           if (root) oldRootBuffer.push(object);
+         } else {
+           if (VM.VERIFY_ASSERTIONS) VM.assertions._assert(RCImmixObjectHeader.isNew(object));
+           // we are the first to reach the object; forward it
+           if (RCImmixObjectHeader.incRCNoSync(object) == RCImmixObjectHeader.INC_NEW) {
+             // forward
+             ObjectReference newObject;
+             if (RCImmixCons.rcSpace.exhaustedCopySpace || RCImmixObjectHeader.isPinnedObject(object)) {
+               RCImmixObjectHeader.clearStateYoungObject(object);
+               newObject = object;
+             } else {
+               if (VM.VERIFY_ASSERTIONS) VM.assertions._assert(!RCImmixObjectHeader.isPinnedObject(object));
+               newObject = ForwardingWord.forwardObject(object, Plan.ALLOC_DEFAULT);
+             }
+             slot.store(newObject);
+             RCImmixObjectHeader.incLines(newObject);
+             modBuffer.push(newObject);
+             if (root) oldRootBuffer.push(newObject);
+           }
+         }
+       }
+     } else {
+       if (RCImmixObjectHeader.incRC(object) == RCImmixObjectHeader.INC_NEW) {
+         modBuffer.push(object);
+       }
+       if (root) oldRootBuffer.push(object);
+     }
+   }
+
+   @Inline
+   public static boolean isValidRef(ObjectReference ref) {
+     if (ref.isNull()) {
+       return false;
+     }
+
+     if (!Space.isMappedObject(ref)) {
+       return false;
+     }
+
+     if (ref.toAddress().toWord().and(Word.fromIntZeroExtend(3)).NE(Word.zero())) {
+       return false;
+     }
+
+     if (!Space.isInSpace(RCImmixCons.REF_COUNT, ref) && !Space.isInSpace(RCImmixCons.REF_COUNT_LOS, ref)) {
+       return false;
+     }
+
+     if (Space.isInSpace(RCImmixCons.REF_COUNT, ref)) {
+       return RCImmixSpace.isNew(ref);
+     }
+
+     if (Space.isInSpace(RCImmixCons.REF_COUNT_LOS, ref)) {
+       return ExplicitLargeObjectSpace.isNew(ref);
+     }
+
+     return false;
+   }
+}
